cdef {{IDX_T}} binary_search_{{PYIDX}}({{IDX_T}}* vec, {{IDX_T}} size, {{IDX_T}} first, {{IDX_T}} last, {{IDX_T}} x) nogil:
    """
    Binary seach in an array of {{IDX_T}}s
    """

    cdef {{IDX_T}} mid

    while (first < last):
        mid = (first + last) / 2
        if (vec[mid] == x):
            return mid
        elif vec[mid] > x:
            last = mid - 1
        else:
            first = mid + 1

    if (first == size):
        return first
    else:
        return first


cdef {{IDX_T}} check_idx_{{PYIDX}}({{IDX_T}} idx, {{IDX_T}} max_idx):

    if idx < 0:
        idx = max_idx + idx

    if idx >= max_idx or idx < 0:
        return -1
    else:
        return idx
